@{
    ViewData["Title"] = "Submition List Page";
    var obj = new WebApplication10.DTO.SetMarks();
}

<div class="text-center">
    <div class="row">
            <form action="api/user/create" method="post">
                @{
                    if (@ViewData["Status"] != "p1")
                    {

                        foreach (var item in @ViewData["SubmitionResult"] as IEnumerable<Assigned>)
                        {

                            <div class="text-lg-start" style="border:2px solid black; padding:30px; border-radius:10px;">
                                <div class="form-group">
                                    <strong>
                                        Student ID:
                                    </strong>
                                    <span>
                                        @item.StudentId
                                    </span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <strong>
                                        Student Name:
                                    </strong>
                                    <span>
                                        @item.Student.Name
                                    </span>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <strong>
                                        Submited File:
                                    </strong>
                                    <a href="/api/assignment/download?id=@item.Id" target="_blank">Click Here </a>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <strong>
                                        Comment Or Answer:
                                    </strong>
                                    <span>
                                        @item.CommentOrAnswer
                                    </span>
                                </div>

                                <br />
                                <br />
                                <div class="form-group">
                                    <label for="ObtainMarks" class="control-label">
                                        <strong>Obtain Marks: </strong>
                                    </label>
                                    <input asp-for="@obj.ObtainMarks" asp-short-name="true" /> / @ViewData["TotalMarks"]
                                <br />
                                    <span asp-validation-for="@obj.ObtainMarks" asp-short-name="true" class="text-danger"></span>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <label for="Remarks" class="control-label"><strong>Remarks: </strong></label>
                                    <br />
                                    <textarea asp-for="@obj.Remarks" asp-short-name="true" class="form-control">@item.Remarks</textarea>
                                    <span asp-validation-for="@obj.Remarks" asp-short-name="true" class="text-danger"></span>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <strong>
                                        Submition Date:
                                    </strong>
                                    <span>
                                        @item.SubmitDate
                                    </span>
                                </div>
                                <br />
                                <br />
                                <div class="text-end">
                                <input type="submit" value="Update" class="btn-primary"/>
                                </div>
                            </div>
                            <br />
                        }
                    }
                }
            </form>
        </div>

</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

